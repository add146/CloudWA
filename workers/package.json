{
    "name": "cloudwa-flow-workers",
    "version": "1.0.0",
    "description": "CloudWA Flow - WhatsApp SaaS Backend (Cloudflare Workers)",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "db:generate": "drizzle-kit generate:sqlite",
        "db:migrate:local": "wrangler d1 migrations apply cloudwa-flow-db --local",
        "db:migrate:prod": "wrangler d1 migrations apply cloudwa-flow-db --remote",
        "db:studio": "drizzle-kit studio",
        "test": "vitest"
    },
    "dependencies": {
        "@whiskeysockets/baileys": "^6.6.0",
        "bcryptjs": "^2.4.3",
        "drizzle-orm": "^0.29.0",
