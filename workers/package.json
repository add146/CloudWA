        "jose": "^5.2.0",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20240117.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/qrcode": "^1.5.5",
        "drizzle-kit": "^0.20.0",
        "typescript": "^5.3.0",
        "vitest": "^1.2.0",
        "wrangler": "^4.63.0"
    }
}
